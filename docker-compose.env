# Redis Configuration
REDIS_PASSWORD=redis_password_change_in_production
REDIS_PORT=6379

# Backend Configuration
BACKEND_PORT=3000
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT=5173

# Network Configuration
NETWORK_NAME=expense_management_network

# Volume Configuration
DB_VOLUME=expense_management_db_data
REDIS_VOLUME=expense_management_redis_data
UPLOADS_VOLUME=expense_management_uploads